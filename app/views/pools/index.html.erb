<h1>Listing Oligo Pool<%= (@pools.size > 1 ? 's' : '') %></h1>

<table class="list">
  <tr>
    <th>Pool ID</th>
	<th>Label</th>
    <th>Pool Name</th>
	<th>Total Oligos</th>
	<th>Source Conc(um)</th>
	<th>Description</th>
	<th colspan="3">&nbsp;</th>   
  </tr>

<% for pool in @pools %>
  <tr>
    <td><%=h pool.id %></td>
	<td><%=h pool.tube_label %></td>
    <td><%=h pool.pool_name %></td>
	<td><%=h pool.total_oligos %></td>
	<td><%=h pool.source_conc_um %></td>
    <td><%=h pool.pool_description %></td>
    <td><%= link_to 'Show', pool %></td>
	<td><%= link_to 'Edit', edit_pool_path(pool) %></td>
	<% if current_user && current_user.has_role?("admin") %>
	<td><%= button_to "Delete", { :action => "destroy", :id => pool.id },
          :confirm => "Are you sure?", :method => :delete %></td>
	<% end %>
  </tr>
<% end %>
</table>
