<h1>Editing Misc Pool: <%=h [@pool.tube_label, @pool.pool_name].join('/') %></h1>

<% form_for @pool, :action => :update do |f| %>
  <%=f.error_messages %>
  <%= render :partial => 'pool_form', :locals => {:f => f} %>
  <%= break_clear %>
  
  <table class="list">
  <tr><th>Total Oligos:</th><td><strong><%=h @pool.total_oligos %></strong></td></tr>
  
  <% if @from_pools %>
    <tr><th>From Pools:</th><td><%=h @from_pools.join(', ')%></td></tr>
  <% end %>
  
  <% if @from_plates %>
    <tr><th>From Plates:</th><td><%=h @from_plates.join(', ')%></td></tr>
  <% end %>
  </table>
  
  <%= break_clear(f.submit 'Update')%>
<% end %>
