<h1>Query Oligo Designs</h1>

<% form_tag({:action => :list_selected}, :method => :get) do %>

<fieldset class="form">
<legend>Specify parameters</legend>
<table class="form">
  <tr>
  	<th>Version(s):</th>
  	<td><%= collection_select(:version, :id, @versions, :id, :version_id_name, {:include_blank => 'All'},
                             {:size => 3, :multiple => :multiple,
                              :onChange => remote_function(:url=> {:action=> :get_project_list},
                              :with=> "'version_id=' + this.value" )})%></td>
  </tr>
</table>
<div id="project_list"></div>
<div id="gene_list"></div>
</fieldset>

<%= break_clear(submit_tag "Submit") %>
<%end%>